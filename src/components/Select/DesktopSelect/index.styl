.select {
  position: relative
  width: 300px

  &__control {
    position: relative
    width: 100%
    height: 50px
    border: 1px solid grey
    border-radius: 2px

    &--direction_down:after {
      margin-top: -3px
      border-color: #808080 transparent transparent transparent
      border-width: 5px 5px 0 5px
    }

    &--direction_up:after {
      margin-bottom: -3px
      border-color: transparent transparent #808080 transparent
      border-width: 0 5px 5px 5px
    }

    &:after {
      position: absolute
      top: 50%
      right: 15px
      display: block
      width: 0
      height: 0
      border-style: solid
      content: ' '
    }
  }

  &__value {
    position: absolute
    left: 0
    top: 0
    font-size: 15px
    padding: 0 15px
    line-height: 48px
    height: 48px
    overflow: hidden
    opacity: 1
    pointer-events: none
    &--hidden {
      opacity: 0
    }
  }

  &__label {
    position: absolute
    z-index: 5
    top: 0
    bottom: 0
    font-size: 14px
    left: 10px
    padding: 0 5px
    line-height: 48px
    transition: all 0.25s
    pointer-events: none
    &--onTop {
      font-size: 13px
      line-height: 11px
      background-color: #fff
      bottom: auto
      transform: translateY(-7px)
    }
  }

  &__input {
    position: absolute
    border: 0
    padding: 0 15px
    font-size: 14px
    outline: none
    top: 0
    left: 0
    width: 100%
    height: 100%
  }


  &__menu-wrap {
    position: absolute
    width: 100%
    z-index: 1
    border-bottom-right-radius: 2px
    border-bottom-left-radius: 2px
    background-color: #fff
    border: 1px solid grey
    max-height: 240px
    &--direction_down {
      top: 100%
      margin-top: -1px
    }
    &--direction_up {
      bottom: 100%
      margin-bottom: -1px
    }
  }

  &__menu {
    text-align: left
    list-style: none
    max-height: 238px
    overflow-y: auto
    &--isEmpty {
      padding: 8px 15px
      font-size: 15px
    }
  }

  &__option {
    cursor: pointer
    font-size: 15px
    font-weight: 300
    padding: 10px 15px
  }

  &__option-text {
    .highlight {
      color: orange
      text-decoration: underline
    }
  }
}