.select {
  position: relative
  width: 300px
  margin: auto

  &__control {
    position: relative
    width: 100%
    height: 50px
    border: 1px solid grey
    border-radius: 2px

    &:after {
      position: absolute
      top: 50%
      right: 15px
      display: block
      width: 0
      height: 0
      margin-top: -3px
      border-color: #808080 transparent transparent transparent
      border-style: solid
      border-width: 5px 5px 0 5px
      content: ' '
    }
  }

  &__value {
    position: absolute
    left: 0
    top: 0
    font-size: 15px
    padding: 0 15px
    line-height: 48px
    opacity: 1
    pointer-events: none
    &--hidden {
      opacity: 0
    }
  }

  &__label {
    position: absolute
    top: 0
    bottom: 0
    font-size: 14px
    left: 10px
    padding: 0 5px
    line-height: 48px
    transition: all 0.25s
    pointer-events: none
    &--onTop {
      font-size: 13px
      line-height: 11px
      background-color: #fff
      bottom: auto
      transform: translateY(-7px)
    }
  }

  &__input {
    position: absolute
    border: 0
    padding: 0 15px
    font-size: 14px
    outline: none
    top: 0
    left: 0
    width: 100%
    height: 100%
  }


  &__menu-wrap {
    position: absolute
    top: 100%
    width: 100%
    z-index: 1
    border-bottom-right-radius: 2px
    border-bottom-left-radius: 2px
    background-color: #fff
    border: 1px solid grey
    margin-top: -1px
    max-height: 200px
  }

  &__menu {
    text-align: left
    list-style: none
    max-height: 198px
    overflow-y: auto
    &--isEmpty {
      padding: 8px 15px
      font-size: 15px
    }
  }

  &__option {
    cursor: pointer
    font-size: 15px
    padding: 8px 15px
  }
}