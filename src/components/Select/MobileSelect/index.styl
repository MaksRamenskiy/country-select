.select-mobile {
  position: relative
  width: 300px
  margin: auto

  &__value {
    padding: 0 20px
    line-height: 48px
    transition: opacity 0.25s
  }
  &__placeholder {
    position: absolute
    top: 0
    bottom: 0
    left: 20px
    padding: 0 4px
    line-height: 48px
    transition: all 0.25s
    &--onTop {
      font-size: 13px
      line-height: 11px
      background-color: #fff
      bottom: auto
      transform: translateY(-7px)
    }
  }

  &__native-select {
    position: absolute
    top: 0
    left: 0
    opacity: 0
    width: 100%
    height: 100%
  }

  &__label {
    position: relative
    width: 100%
    height: 50px
    border: 1px solid grey
    border-radius: 2px


    &:after {
      position: absolute
      top: 50%
      right: 15px
      display: block
      width: 0
      height: 0
      margin-top: -3px
      border-color: #808080 transparent transparent transparent
      border-style: solid
      border-width: 5px 5px 0 5px
      content: ' '
    }
  }

}