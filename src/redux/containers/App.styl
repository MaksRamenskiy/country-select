@require './../components/Select';

.App {
  padding: 30px 0
  height: 100vh
  display: flex
  flex-direction: column
  align-items center
  justify-content: flex-start

  &--alignBottom {
    justify-content: space-between
  }

  &__button {
    position: fixed
    width: 150px
    height: 50px
    line-height: 50px
    text-align: center
    right: 30px
    bottom: 30px
  }

  &__title {
    text-align: center
    font-size: 32px
    font-weight: 400
    margin: 20px 0 180px
  }
}